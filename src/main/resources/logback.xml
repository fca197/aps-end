<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="1 seconds">

  <appender class="ch.qos.logback.core.ConsoleAppender" name="console">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <!--输出格式化-->
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{traceId}] %-5level %logger{15}:%F.%L - %msg%n</pattern>
    </encoder>
  </appender>


  <contextName>logback</contextName>
  <!--  <property name="LOG_PATTERN" value="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%X{traceId}] [%thread] %logger{18}[%file:%line] %msg%n"/>-->
  <!-- 控制台输出 -->
  <logger level="debug" name="com.olivia"></logger>
  <!--  <logger  name="org.springframework" level="debug"></logger>-->
  <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread{5}] [%X{TRACE_ID}] %-5level %logger{50} - %msg%n</pattern>
  <root level="info">
    <appender-ref ref="console"/>
  </root>

</configuration>
